{
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "impliedStrict": true
      },
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-alert": 0,
      "no-console": 0,    
      "no-new-symbol": 0,
      "no-process-exit": 0,
      "no-self-assign": 0,
      "no-unused-vars": [
        2,
        {
          "argsIgnorePattern": "^(next)|(reject)",
          "varsIgnorePattern": "^(Logger)"
        }
      ],
      "no-unused-labels": 0,
      "semi": 2,
      "node/no-extraneous-require": 0,
      "node/no-unpublished-require": 0,
      "node/shebang": 0
    }
  }